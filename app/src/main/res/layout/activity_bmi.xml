<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="#FFF3E0">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate BMI"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#0000FF"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="การคำนวณหาค่าดัชนีมวลกาย"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText" />

    <!-- Input Weight -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Weight :"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#D1C4E9"
            android:hint="ใส่น้ำหนักเป็นหน่วยกิโลกรัม"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="8dp"
            android:textColorHint="#D32F2F"
            tools:ignore="HardcodedText,VisualLintTextFieldSize" />
    </LinearLayout>

    <!-- Input Height -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Height :"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etHeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:backgroundTint="#D1C4E9"
            android:hint="ใส่ความสูงเป็นหน่วยเซนติเมตร"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="8dp"
            android:textColorHint="#D32F2F"
            tools:ignore="HardcodedText,VisualLintTextFieldSize" />
    </LinearLayout>

    <!-- Calculate Button -->
    <Button
        android:id="@+id/btnCalculateBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cal"
        android:backgroundTint="#673AB7"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText" />

    <!-- Result Weight -->
    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#FFFFCC"
        android:padding="8dp"
        android:text="Weight :"
        android:textColor="#FF00FF"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <!-- Result Height -->
    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#FFFFCC"
        android:padding="8dp"
        android:text="Height :"
        android:textColor="#FF00FF"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <!-- Result BMI -->
    <TextView
        android:id="@+id/tvBMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#FFFFCC"
        android:padding="8dp"
        android:text="BMI :"
        android:textColor="#FF00FF"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="#673AB7"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        tools:ignore="HardcodedText" />
</LinearLayout>
